// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ========================================
// General
// ========================================

model Chain {
  chainId     String @id
  blockHeight Int
}

model Block {
  height       Int           @id
  hash         String        @unique
  time         DateTime
  transactions Transaction[]
  events       Event[]
}

model Transaction {
  hash        String    @id
  code        Int
  fee         Json
  gasUsed     String
  gasWanted   String
  time        DateTime
  messages    Message[]
  Block       Block?    @relation(fields: [blockHeight], references: [height])
  blockHeight Int
}

model Message {
  id              Int         @id @default(autoincrement())
  typeUrl         String
  value           Json
  Transaction     Transaction @relation(fields: [transactionHash], references: [hash])
  transactionHash String
}

model Event {
  id              Int      @id @default(autoincrement())
  type            String
  attributes      Json[]
  time            DateTime
  beginBlockEvent Boolean  @default(false)
  endBlockEvent   Boolean  @default(false)
  Block           Block    @relation(fields: [blockHeight], references: [height])
  blockHeight     Int
}
